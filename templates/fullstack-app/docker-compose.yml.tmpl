services:
  backend:
    build:
      context: ./backend
    container_name: {{ project_slug }}-backend
    env_file:
      - ./.env
      - ./backend/.env
    ports:
      - "${BACKEND_PORT:-8000}:8000"
    volumes:
      - ./backend:/app

  frontend:
    build:
      context: ./frontend
      args:
        NEXT_PUBLIC_API_URL: ${NEXT_PUBLIC_API_URL:-http://localhost:8000}
    container_name: {{ project_slug }}-frontend
    env_file:
      - ./.env
      - ./frontend/.env.local
    depends_on:
      - backend
    ports:
      - "${FRONTEND_PORT:-3000}:3000"
    volumes:
      - ./frontend:/app
      - /app/node_modules
      - /app/.next
